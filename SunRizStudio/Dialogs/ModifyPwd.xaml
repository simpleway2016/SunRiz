<Window x:Class="SunRizStudio.Dialogs.ModifyPwd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SunRizStudio.Dialogs"
        mc:Ignorable="d"
        Title="修改你的登录密码" Height="236.301" Width="423.288" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="旧密码："></TextBlock>
            <PasswordBox x:Name="txtOld" Margin="0,5,0,0" Height="22" Width="230"></PasswordBox>
            <TextBlock Margin="0,5,0,0" Text="新密码："></TextBlock>
            <PasswordBox x:Name="txtPwd" Margin="0,5,0,0" Height="22" Width="230"></PasswordBox>
            <TextBlock Margin="0,5,0,0" Text="密码确认："></TextBlock>
            <PasswordBox x:Name="txtPwd2" Margin="0,5,0,0" Height="22" Width="230"></PasswordBox>
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Center">
                <Button Width="60" Height="22" Content="确 定" x:Name="btnOK" Click="btnOK_Click"></Button>
                <Button Width="60" Height="22" Margin="10,0,0,0" Content="取 消" x:Name="btnCancel" Click="btnCancel_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
